# ping every minute
* * * * * root /bin/bash /sbin/healthcheck-diff.sh ping {{ ansible_facts['default_ipv4']['gateway'] }}

# {{ ansible_facts['default_ipv4']['gateway'] }}

# netplan apply if stale for 2 min
*/2 * * * * root /bin/bash /sbin/healthcheck-diff.sh netplan 120

# reboot if stale for 10 min
*/5 * * * * root /bin/bash /sbin/healthcheck-diff.sh reboot 600
