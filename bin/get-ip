#!/usr/bin/env bash
set -euo pipefail

if type ifconfig &>/dev/null; then
  for iface in $(ifconfig | grep -E '(^[a-z]|inet\s)' | grep -B1 'inet' | grep 'UP' | grep -v 'POINTOPOINT' | awk -F: '{print $1}' | grep -v -E '^(lo0)'); do
    ifconfig $iface | sed -e 's;broadcast.*;;' -e 's;Bcast.*;;' -e 's;netmast.*;;' -e 's;Mask.*;;' | grep -o -E '[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}' | uniq
  done
elif type networkctl &>/dev/null; then
  networkctl status 2>&1 | grep -v -E '(docker|carrier|Link)' | grep -v 'Gateway' | grep ' on ' | grep -o -E '[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}'
fi
