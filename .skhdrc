shift + ctrl + alt + cmd - q : yabai --restart-service
shift + ctrl + alt + cmd - w : yabai -m space --balance
shift + ctrl + alt + cmd - e : osascript ~/.osascripts/sound-reset-left-right-balance.scpt
shift + ctrl + alt + cmd - r : bash ~/bin/yabai_cycle_clockwise.sh
shift + ctrl + alt + cmd - t : echo

# float tall
shift + ctrl + alt + cmd - a : yabai -m window --grid 24:24:5:1:14:22
# float middle center quarter
shift + ctrl + alt + cmd - s : yabai -m window --grid 4:4:1:1:2:2
# float tall wide 16/24 of screen for editing
shift + ctrl + alt + cmd - d : yabai -m window --grid 24:24:4:2:16:20
# almost fullscreen
shift + ctrl + alt + cmd - f : yabai -m window --toggle float --grid 60:60:1:1:58:58
# float 1/3 tall vertical screen
shift + ctrl + alt + cmd - g : yabai -m window --grid 3:1:0:0:1:1

# float tall wide 18/24 of screen for focus
shift + ctrl + alt + cmd - z : yabai -m window --grid 24:24:3:3:18:21
# float tall wide 20/24 of screen for video
shift + ctrl + alt + cmd - x : yabai -m window --grid 24:24:2:4:20:19
shift + ctrl + alt + cmd - c : echo
shift + ctrl + alt + cmd - v : echo
# float 2/3 tall vertical screen
shift + ctrl + alt + cmd - b : yabai -m window --grid 3:1:0:1:1:2

# grid format is <rows>:<cols>:<start-x>:<start-y>:<width>:<height>

ctrl + alt + cmd - q : skhd --restart-service
# float top left
ctrl + alt + cmd - w : yabai -m window --grid 2:2:0:0:1:1
# float top right
ctrl + alt + cmd - e : yabai -m window --grid 2:2:1:0:1:1
ctrl + alt + cmd - r : yabai -m space --rotate 270
ctrl + alt + cmd - t : osascript ~/.osascripts/toggle-terminal.scpt

# float left
ctrl + alt + cmd - a : yabai -m window --grid 1:2:0:0:1:1
# float tall 1/2 of screen for web
ctrl + alt + cmd - s : yabai -m window --grid 1:4:1:0:2:1
# float right
ctrl + alt + cmd - d : yabai -m window --grid 1:2:1:0:1:1
ctrl + alt + cmd - f : osascript ~/.osascripts/toggle-firefox.scpt
ctrl + alt + cmd - g : osascript ~/.osascripts/toggle-googlechrome.scpt

# float bottom left
ctrl + alt + cmd - z : yabai -m window --grid 2:2:0:1:1:1
# float bottom right
ctrl + alt + cmd - x : yabai -m window --grid 2:2:1:1:1:1
ctrl + alt + cmd - c : osascript ~/.osascripts/toggle-slack.scpt
ctrl + alt + cmd - v : osascript ~/.osascripts/toggle-vscode.scpt
ctrl + alt + cmd - b : osascript ~/.osascripts/toggle-brave.scpt

ctrl + alt + cmd - up : yabai -m window --grid 2:1:0:0:1:1
ctrl + alt + cmd - down : yabai -m window --grid 2:1:0:1:1:1
ctrl + alt + cmd - left : yabai -m window --grid 3:1:0:0:1:1
ctrl + alt + cmd - right : yabai -m window --grid 3:1:0:1:1:2

ctrl + alt + cmd - space : osascript ~/.osascripts/hide-current-window.scpt

f13 : yabai -m window --toggle float --grid 60:60:1:1:58:58
f14 : yabai -m window --grid 24:24:3:3:18:21
f15 : osascript ~/.osascripts/toggle-terminal.scpt

# grid format is <rows>:<cols>:<start-x>:<start-y>:<width>:<height>
