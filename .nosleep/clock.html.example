<html lang="en">

<head>
  <title>clock</title>
  <style>
    /* Default styles (e.g., light mode) */
    body {
      background-color: #fff;
      color: #222;
      height: 100%;
      margin: 0;
      overflow: hidden;
      padding: 0;
      width: 100%;
    }

    video#bg {
      top: 0;
      min-height: 100%;
      min-width: 100%;
      opacity: 30%;
      position: fixed;
      left: 0;
      /* left: -50%; // for vertical screen*/
    }

    /* Styles for dark mode */
    @media (prefers-color-scheme: dark) {
      body {
        background-color: #111;
        color: #aaa;
      }

      video#bg {
        opacity: 15% !important;
      }

      video#fg {
        /* important so displaysleep is prevented */
        opacity: 30% !important;
        width: 100%;
        /* important so displaysleep is prevented */
      }
    }

    div {
      font-family: 'Arial Black', 'Arial Rounded MT Bold';
    }

    #overlay {
      left: 0;
      position: absolute;
      top: 0;
      width: 100%;
    }

    #day {
      margin-top: 3%;
      /* centre */
      max-width: fit-content;
      margin-bottom: 0;
      margin-left: auto;
      margin-right: auto;

      font-size: 80pt;
    }

    #clock {
      /* centre */
      max-width: fit-content;
      margin-bottom: 0;
      margin-left: auto;
      margin-right: auto;

      font-size: 360pt;
    }

    #seconds {
      font-size: 90pt !important;
    }

    video#fg {
      position: absolute;
      /* important so displaysleep is prevented */
      opacity: 100%;
      width: 100%;
      /* important so displaysleep is prevented */
    }
  </style>
</head>

<body><video id="bg" autoplay="true" loop="true" muted="true" src="file://$NO_SLEEP_VIDEO_FILE"></video><div id="overlay"><div id="day"></div><div id="clock"></div></div><video id="fg" autoplay="true" controls="true" loop="true" muted="true" src="file://$NO_SLEEP_VIDEO_FILE"></video>
<script>
  function detectBrave() {
    if (typeof navigator.brave !== 'undefined' && typeof navigator.brave.isBrave === 'function') {
      return navigator.brave.isBrave();
    }
    return false;
  }

  setInterval(() => {
    let day = document.getElementById('day');
    let now = new Date();
    if (detectBrave()) {
     day.style.fontWeight = 'bold';
    }
    day.innerHTML = now.toLocaleDateString('en-US', {
      weekday: "long",
      year: "numeric",
      month: "short",
      day: "numeric",
    });
  }, 1000);

  setInterval(() => {
    let clock = document.getElementById('clock');
    let now = new Date();
    let hourMinute = now.toLocaleTimeString('en-US', {
      hour: '2-digit',
      minute: '2-digit',
      hour12: false
    });
    seconds = document.createElement('span');
    seconds.id = 'seconds';
    seconds.innerHTML = now.toLocaleTimeString('en-US', {
      hour: '2-digit',
      minute: '2-digit',
      second: '2-digit',
      hour12: false
    }).replace(hourMinute, '');
    if (detectBrave()) {
      clock.style.fontWeight = 'bold';
    }
    clock.innerHTML = hourMinute + '' + seconds.outerHTML;
    let fg = document.getElementById('fg');
    fg.style.top = (clock.offsetTop + clock.offsetHeight + 10) + 'px';
    // detect if fg is between clock offsetTop and offsetHeight
    if (fg.offsetTop < clock.offsetTop + clock.offsetHeight) {
      // if so then hide the fg
      fg.style.visibility = 'hidden';
    } else {
      fg.style.visibility = 'visible';
    }
  }, 1000);
</script>
</body>

</html>
